<div class="card card-banner"
    style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key %>')">
  
  <h1><%= @cocktail.name %> recipe</h1>

  <div class="badge">
    <%# data: { confirm: "Do you want to edit this recipe?" } do  %>
      
    <%= link_to edit_cocktail_path, data: { confirm: "Do you want to edit this recipe?" } do %>
      <i class="fas fa-edit"></i>
    <% end %>

    <%= link_to cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="fa fa-trash destroy_dose"></i>
    <% end %>
  </div>

</div>

<div class="dose-description" style="display: flex;justify-content: space-between; margin-top: 20px">
  <div style="flex-grow: 1;">
      <table class="table table-bordered">
        <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Action</th>
        </thead>
        <tbody>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td><%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                  <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
  <div style="margin-left: 20px">
    <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
  </div>
</div>
